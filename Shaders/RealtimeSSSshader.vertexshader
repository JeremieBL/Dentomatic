#version 330 core
layout (location = 0) in vec3 aPos;
layout (location = 1) in vec3 aNormal;

out vec3 v_worldPos;
out vec3 v_normal;
out vec3 v_viewPos;

uniform mat4 M;
uniform mat4 V;
uniform mat4 P;

void main() {
    vec4 worldPos = M * vec4(aPos, 1.0);
    v_worldPos = vec3(worldPos);
    v_viewPos = vec3(V * worldPos);
    v_normal = mat3(transpose(inverse(M))) * aNormal;
    gl_Position = P * V * worldPos;
}